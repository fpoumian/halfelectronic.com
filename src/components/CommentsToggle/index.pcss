.wrapper {
  background: var(--lightGray);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 15vh;
  cursor: pointer;
}

.label-wrapper {
  line-height: 0;
  display: flex;
  align-items: center;
}

.label {
  text-transform: uppercase;
  font-weight: 600;
  color: var(--darkGray);
  margin-left: 0.5rem;
}

.comments-icon {
  font-size: 1.2rem;
  color: var(--neutralGray);
}