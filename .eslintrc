{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["prettier", "react"],
  "env": {
    "es6": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      { "singleQuote": true, "semi": false, "trailingComma": "es5" }
    ]
  },
  "globals": {
    "graphql": true
  }
}
